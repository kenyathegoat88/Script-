-- Cuerpo en scroll para evitar que se corte
local scroll = Instance.new("ScrollingFrame", mainFrame)
scroll.Size = UDim2.new(1, 0, 1, -65)
scroll.Position = UDim2.new(0, 0, 0, 65)
scroll.CanvasSize = UDim2.new(0, 0, 0, 600)
scroll.ScrollBarThickness = 6
scroll.BackgroundTransparency = 1

-- FUNC: crear casilla con label
local function crearCasilla(nombre, posicionY)
	local label = Instance.new("TextLabel", scroll)
	label.Size = UDim2.new(0.6, -10, 0, 30)
	label.Position = UDim2.new(0, 10, 0, posicionY)
	label.BackgroundTransparency = 1
	label.Text = nombre
	label.Font = Enum.Font.GothamBold
	label.TextSize = 16
	label.TextColor3 = Color3.fromRGB(255,255,255)
	label.TextXAlignment = Enum.TextXAlignment.Left

	local input = Instance.new("TextBox", scroll)
	input.Size = UDim2.new(0.35, 0, 0, 30)
	input.Position = UDim2.new(0.6, 0, 0, posicionY)
	input.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
	input.TextColor3 = Color3.new(1,1,1)
	input.Font = Enum.Font.Gotham
	input.TextSize = 16
	input.Text = "6"
	input.TextXAlignment = Enum.TextXAlignment.Center
	return input
end

