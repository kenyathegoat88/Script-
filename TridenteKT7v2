	mainFrame.Visible = false
	openBtn.Visible = true
end)

openBtn.MouseButton1Click:Connect(function()
	mainFrame.Visible = true
	openBtn.Visible = false
end)

-- LOGICA REACH (sin colisi√≥n, invisible)
local function activarHitbox(tama√±o, color)
	local leg = Character:FindFirstChild("RightFoot") or Character:FindFirstChild("Right Leg")
	if not leg then return end
	local box = Instance.new("Part", Character)
	box.Size = Vector3.new(4, 4, tama√±o)
	box.Transparency = 1
	box.CanCollide = false
	box.Anchored = false
	box.Massless = true
	box.Name = "Hitbox_" .. math.random(1, 1000)
	box.Color = color or Color3.fromRGB(255, 0, 0)

	local weld = Instance.new("WeldConstraint", box)
	weld.Part0 = box
	weld.Part1 = leg
	box.CFrame = leg.CFrame * CFrame.new(0, 0, -tama√±o / 2)
end

btn1.MouseButton1Click:Connect(function()
	local valor = tonumber(alcance1.Text) or 6
	activarHitbox(valor, Color3.fromRGB(255, 0, 0))
end)

btn2.MouseButton1Click:Connect(function()
	local valor = tonumber(alcance2.Text) or 6
	activarHitbox(valor, Color3.fromRGB(0, 255, 0))
end)
